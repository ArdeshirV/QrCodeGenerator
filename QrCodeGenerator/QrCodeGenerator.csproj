<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>Net.Codecrete.QrCodeGenerator</RootNamespace>
    <PackageId>Net.Codecrete.QrCodeGenerator</PackageId>
    <Version>1.4.0</Version>
    <Authors>Manuel Bleichenbacher, Project Nayuki</Authors>
    <Product>QR Code Generator for .NET</Product>
    <Description>QR Code Generator for .NET derived from project Nayuki's generator (https://github.com/nayuki/QR-Code-generator). It aims to be clear, compact and well documentated.</Description>
    <Copyright>Copyright Manuel Bleichenbacher and Project Nayuki (MIT License)</Copyright>
    <RepositoryUrl>https://github.com/manuelbl/QrCodeGenerator</RepositoryUrl>
    <PackageProjectUrl>https://github.com/manuelbl/QrCodeGenerator</PackageProjectUrl>
    <PackageLicenseUrl>https://opensource.org/licenses/MIT</PackageLicenseUrl>
    <PackageTags>qr code, qrcode</PackageTags>
    <PackageReleaseNotes>Initial release for .NET</PackageReleaseNotes>
    <Company>Codecrete</Company>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Drawing.Common" Version="4.5.1" />
  </ItemGroup>

</Project>
